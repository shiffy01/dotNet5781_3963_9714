<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        xmlns:BO="clr-namespace:BO;assembly=BL" x:Class="PL.UpdateLine"
        mc:Ignorable="d"
        Title="UpdateLine" Height="450" Width="800" Loaded="Window_Loaded">
    <Window.Resources>
        <CollectionViewSource x:Key="busLineViewSource" d:DesignSource="{d:DesignInstance {x:Type BO:BusLine}, CreateList=True}"/>
    </Window.Resources>
    <Grid DataContext="{StaticResource busLineViewSource}">
        <Grid x:Name="grid1" HorizontalAlignment="Left" Margin="33,27,0,0" VerticalAlignment="Top" Height="91" Width="298" RenderTransformOrigin="0.5,0.5">
            <Grid.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="-0.085"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Grid.RenderTransform>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Label  Content="Bus line number:" Grid.Column="0" HorizontalAlignment="Left" Margin="3" Grid.Row="0" VerticalAlignment="Center"/>
            <TextBox x:Name="bus_line_numberTextBox" PreviewKeyDown="bus_line_number_previewKeyDown" Grid.Column="1" HorizontalAlignment="Left" Height="23" Margin="3" Grid.Row="0" Text="{Binding Bus_line_number, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}" VerticalAlignment="Center" Width="120" TextChanged="bus_line_numberTextBox_TextChanged"/>
            <TextBox x:Name="first_bus_hrs_tb" HorizontalAlignment="Left" Height="Auto" Margin="71,43,0,-28.667" TextWrapping="Wrap" Text="{Binding First_bus}" MaxLength="2" LostFocus="First_hrs_LostFocus" VerticalAlignment="Stretch" Width="30" TextChanged="first_bus_hrs_tb_TextChanged"/>
        </Grid>
        <Button x:Name="updateButton" Content="Update" IsEnabled="False" HorizontalAlignment="Left" Margin="586,326,0,0" VerticalAlignment="Top" Width="121" Height="43" Click="UpdateButton_Click"/>
        <Label Content="First Bus: " HorizontalAlignment="Left" VerticalAlignment="Top" Height="29" Width="61" Margin="39,68,0,0"/>
    </Grid>
</Window>
